@using KUMO.CentralAdmin.Model
@model KUMO.CentralAdmin.Web.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = StringResources.ForgotPassword;
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}


<div class="list-box">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Enter your email address and we'll send you a link to reset your password</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-md-2 control-label" for="Email">@StringResources.EmailAddress</label>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "width: 30%" })
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <span class="help-block text-danger field-validation-error" style="color: red;" data-valmsg-for="Email" data-valmsg-replace="true"><span for="Email" class="">@ViewBag.Message</span></span>
                }

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Send" />
            </div>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
