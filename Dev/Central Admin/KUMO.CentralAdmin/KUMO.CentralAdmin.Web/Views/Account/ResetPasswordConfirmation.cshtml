@{
    ViewBag.Title = "Reset Password Confirmation";

}

@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="list-box">
    <hgroup class="title">
        <h1>@ViewBag.Title</h1>
    </hgroup>
    <div>
        <p>
            Your password has been reset. Please click @Html.ActionLink("here", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" }) to sign in
        </p>
    </div>
</div>