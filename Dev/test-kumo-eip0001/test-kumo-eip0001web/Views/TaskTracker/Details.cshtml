
@model test_kumo_eip0001model.TaskTracker

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-horizontal">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Task tracker</h3>
        </div>
        <hr />

        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt>
                    @TaskTrackerResource.TaskName
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TaskName)
                </dd>

                <dt>
                    @TaskTrackerResource.Priority
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Priority)
                </dd>

                <dt>
                    @TaskTrackerResource.StartDate
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.StartDate, "StandardDateFormat")
                </dd>

                <dt>
                    @TaskTrackerResource.DueDate
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DueDate, "StandardDateFormat")
                </dd>

                <dt>
                    @TaskTrackerResource.CompletionDate
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CompletedDate, "StandardDateFormat")
                </dd>

                <dt>
                   @TaskTrackerResource.AssignedTo
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Assignee.Firstname)
                    @Html.DisplayFor(model => model.Assignee.Lastname)
                </dd>

                <dt>
                    @TaskTrackerResource.CompletePercent
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CompletedPercent)
                </dd>

                <dt>
                    @TaskTrackerResource.TaskStatus
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Status)
                </dd>

                <dt>
                   @TaskTrackerResource.Description
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
                               

            </dl>
        </div>
        <div class="panel-footer">
            <div class="form-group">
                <div class="col-md-offset-4 col-md-7">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                            @Html.ActionLink(StringResources.BackToList, "Index")
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>