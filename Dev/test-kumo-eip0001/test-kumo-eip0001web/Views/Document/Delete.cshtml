@model test_kumo_eip0001model.Document
@using test_kumo_eip0001model;
@using test_kumo_eip0001model.Resources;

@{
}


<div class="form-horizontal">
    <div class="panel panel-primary">
        <div class="panel-heading">
            @if (Model.ItemType == (int)DocumentType.Folder)
            {
                <h3 class="panel-title">@StringResources.DeleteFolder - @Html.DisplayFor(model => model.Name)</h3>
            }
            else
            {
                <h3 class="panel-title">@StringResources.DeleteItem </h3>
            }
        </div>
        <div class="panel-body">
            @{
                <h3>Delete folder will delete all documents in folder. Are you sure you want to delete this folder?</h3>

            }
        </div>
        <div class="panel-footer">
            <div class="form-group">
                <div class="col-md-offset-4 col-md-7">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-primary" /> |
                            @Html.ActionLink(StringResources.BackToList, "Index", new { root = Model.ParentId })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
