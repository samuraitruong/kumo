@using test_kumo_eip0001model;
@using test_kumo_eip0001model.Resources;
@model CustomerViewModel
@{

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">@StringResources.AddANewItem</h3>
            </div>
            <hr />
            <div class="panel-body">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.CompanyName, new { required = "required" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.IndustryId, CRMResource.Industry, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-sm-6 col-md-6 controls">
                            @Html.DropDownList("IndustryId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IndustryId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.EditorFor(model => model.Website, new { required = "required" })

                    @Html.EditorFor(model => model.Phone, new { required = "required" })

                    @Html.EditorFor(model => model.FaxNumber, new { required = "required" })

                    @Html.EditorFor(model => model.CompanyEmailAddress, new { required = "required" })

                    @Html.EditorFor(model => model.CompanyAddress, new { required = "required" })

                    @Html.EditorFor(model => model.Source, new { required = "required" })

                    @Html.EditorFor(model => model.Description, new { required = "required" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.AssignedTo, CRMResource.AssignedTo, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-sm-6 col-md-6 controls">
                            @Html.DropDownList("AssignedTo", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AssignedTo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LeadType, CRMResource.LeadType, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-sm-6 col-md-6 controls">
                            <i class="glyphicon glyphicon-asterisk label-asterik text-danger"></i>
                            <ul style="list-style: none; padding: 0;">
                                @foreach (var g in ViewBag.LeadTypes)
                                {
                                    <li>
                                        <input type="radio" name="LeadType" value="@g" id="@g" />
                                        <label for="@g">@g</label>
                                    </li>
                                }
                            </ul>
                            @Html.ValidationMessageFor(model => model.LeadType, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="panel-footer">
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-7">
                        <input type="submit" class="btn btn-primary" value="Add" /> | @Html.ActionLink(StringResources.BackToList, "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/Scripts/val")
    @Scripts.Render("~/Scripts/md")

}
